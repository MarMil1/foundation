{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"allowSyntheticDefaultImports": true,
		"outDir": "out",
		"lib": [
			"es6",
			"dom",
			"es2016",
			"esnext",
			"dom.iterable",
			"scripthost"
		],
		"types": [
			"webpack-env",
			"mocha",
			"node"
		],
		"baseUrl": ".",
		"sourceMap": true,
		"rootDir": "src-ext",
		"strict": true,
		"noUnusedParameters": true,
	},
	"paths": {
		"@/*": [
		  "src/*"
		]
	},
	"include": [
		"src-ext/extension.ts"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
